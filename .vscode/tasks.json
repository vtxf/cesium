{
    "version": "0.1.0",
    "command": "cmd",
    "args": ["/C"],
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": [
              "\"C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe\"",
              "${file}",
              "--allow-file-access-from-files",
              "--disable-web-security", 
              "--user-data-dir=${workspaceRoot}/.vscode/chrome/"
            ]
        }
    ]
}